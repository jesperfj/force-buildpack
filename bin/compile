#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

indent() {
  sed -u 's/^/       /'
}

echo "-----> Force project"

cd $BUILD_DIR
export HOME=$BUILD_DIR

echo "-----> Installing CLI..."
curl -s https://s3.amazonaws.com/bucket-utDIzwgeHiZvZF3zr4RbWQ/sfdx-v5.7.4-57b4969.tgz | tar zxf -

mkdir .profile.d
echo 'PATH=$PATH:$HOME/.local/share/heroku/bin' > .profile.d/force-defaults.sh
echo 'export SFDX_DISABLE_ENCRYPTION=true' >> .profile.d/force-defaults.sh
echo 'curl -s -H "Accept: application/vnd.sfdx-config" $FORCE_DEVHUB_AUTH_URL | tar -C $HOME/.sfdx -xf -' >> .profile.d/force-defaults.sh
